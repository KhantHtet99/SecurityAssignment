@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="First Name" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Input.Gender" class="form-control">
                    <option value="">-- Select --</option>
                    <option>Male</option>
                    <option>Female</option>
                    <option>Other</option>
                </select>
                <label asp-for="Input.Gender"></label>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Nric" class="form-control" placeholder="S1234567A" />
                <label asp-for="Input.Nric"></label>
                <span asp-validation-for="Input.Nric" class="text-danger"></span>
                <small class="text-muted">Format example: S1234567A (7 digits)</small>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.DateOfBirth" type="date" class="form-control" />
                <label asp-for="Input.DateOfBirth"></label>
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Resume" class="form-label"></label>
                <input asp-for="Input.Resume" type="file" class="form-control" />
                <span asp-validation-for="Input.Resume" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="Input.WhoAmI" class="form-control" style="height: 120px"></textarea>
                <label asp-for="Input.WhoAmI"></label>
                <span asp-validation-for="Input.WhoAmI" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="password" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <small class="text-muted">
                    Password must be at least 12 characters and include uppercase, lowercase, number, and special character.
                </small>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="password" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div id="pwStrengthText" class="form-text"></div>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const pw = document.getElementById("Input_Password");
        const text = document.getElementById("pwStrengthText");

        function checkStrength(p) {
            let score = 0;
            if (p.length >= 12) score++;
            if (/[a-z]/.test(p)) score++;
            if (/[A-Z]/.test(p)) score++;
            if (/[0-9]/.test(p)) score++;
            if (/[^A-Za-z0-9]/.test(p)) score++;

            if (p.length === 0) return "";
            if (score <= 2) return "Strength: Weak";
            if (score === 3 || score === 4) return "Strength: Medium";
            return "Strength: Strong";
        }

        pw?.addEventListener("input", () => {
            text.textContent = checkStrength(pw.value);
        });
    </script>
}
